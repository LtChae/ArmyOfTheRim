        </bodyPartGroupsMatchAny>
        <requiredTags>
          <li>RoyalTier2</li>
        </requiredTags>
        <allowedTags>
          <li>PrestigeCombatGear</li>
        </allowedTags>
      </li>
    </requiredApparel>
    <!-- <throneRoomRequirements> -->
