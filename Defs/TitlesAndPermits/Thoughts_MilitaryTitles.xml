<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ============================= Thoughts related to military titles ============================= -->

  <ThoughtDef>
    <defName>MilitaryGainedTitle</defName>
    <durationDays>7</durationDays>
    <thoughtClass>Thought_MemoryRoyalTitle</thoughtClass>
    <nullifyingTraits>
      <li>Ascetic</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Received {TITLE} rank</label>
        <description>I have been promoted to the rank of {TITLE}. I love the recognition!</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MilitaryLostTitle</defName>
    <durationDays>7</durationDays>
    <thoughtClass>Thought_MemoryRoyalTitle</thoughtClass>
    <nullifyingTraits>
      <li>Ascetic</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Lost {TITLE} rank</label>
        <description>I lost my rank of {TITLE}. This could end my career.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MilitaryTitleApparelRequirementNotMet</defName>
    <workerClass>ThoughtWorker_RoyalTitleApparelRequirementNotMet</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>want {TITLE_label}-specific apparel</label>
        <description>{TITLE_indefinite} should be in uniform:\n\n{0}</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

