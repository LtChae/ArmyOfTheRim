    <nullifyingTraits>
      <li>Ascetic</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>want {TITLE_label}-quality apparel</label>
        <description>{TITLE_indefinite} like myself should only wear apparel of {QUALITY} quality or better.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

