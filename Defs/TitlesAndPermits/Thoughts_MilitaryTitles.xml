    <defName>MilitaryTitleThroneroomRequirementsNotMet</defName>
    <workerClass>ThoughtWorker_ThroneRoomRequirementsNotMet</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <nullifyingTraits>
      <li>Ascetic</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>undignified office</label>
        <description>I am {TITLE_indefinite} and I should have these items in my office:\n\n{0}</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

